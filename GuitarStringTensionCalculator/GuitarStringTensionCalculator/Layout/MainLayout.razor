@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
	<MudAppBar Elevation="1" Dense>
		<MudBadge Dot="true" Color="Color.Secondary" Overlap="true" Visible="@HasNotification">
			<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
		</MudBadge>
	</MudAppBar>
	<MudDrawer @bind-Open="@isOpeningMenu" Variant="@DrawerVariant.Responsive" Color="Color.Primary" Elevation="1">
		<MudDrawerHeader>
			<MudText Typo="Typo.h6">Guitar String Tension Calculator</MudText>
		</MudDrawerHeader>
		<NavMenu />
	</MudDrawer>

	<MudMainContent Class="pt-16 px-2">
		<MudContainer Class="mt-4">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>

@code {
	private bool isOpeningMenu = false;

	private bool HasNotification => false;

	protected override void OnInitialized() {}

	private void ToggleDrawer() {
		this.isOpeningMenu = !this.isOpeningMenu;
	}
}

